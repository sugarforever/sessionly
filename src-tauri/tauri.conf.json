{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sessionly",
  "version": "2.0.0",
  "identifier": "app.sessionly",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sessionly",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost http://127.0.0.1:19823"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "tooltip": "Sessionly"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "providerShortName": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCMTRBOTk4RTlBMUZFMjIKUldRaS9xSHBtS2tVeTU2WVpVVkVlUDYybUJWQUFYanhFZzhtK00yMzQ0ZVRFMW9pZjdZamdkOGUK",
      "endpoints": [
        "https://github.com/sugarforever/sessionly/releases/latest/download/latest.json"
      ]
    }
  }
}
