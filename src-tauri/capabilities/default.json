{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-save",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "process:allow-restart",
    "updater:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/.claude/settings.json", "$HOME/.claude/projects/**", "$DOWNLOAD/**"]
    }
  ]
}
